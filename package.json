{
  "name": "uplc-analyzer",
  "type": "module",
  "version": "0.0.1",
  "workspaces": [
    "packages/*"
  ],
  "description": "Decode and analyze Cardano Plutus smart contracts",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "test": "pnpm -r test && pnpm test:e2e",
    "test:e2e": "vitest run test/popular-contracts.test.ts",
    "test:aiken-compile": "vitest run test/aiken-compile.test.ts",
    "test:packages": "pnpm -r test",
    "deploy": "npm run build && npx wrangler pages deploy dist --project-name=uplc --commit-dirty=true"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/react": "^4.4.2",
    "@harmoniclabs/uplc": "^1.4.1",
    "@uplc/codegen": "workspace:*",
    "@uplc/parser": "workspace:*",
    "@uplc/patterns": "workspace:*",
    "astro": "^5.17.1",
    "mermaid": "^11.6.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@blaze-cardano/uplc": "^0.4.3",
    "vitest": "^4.0.18",
    "wrangler": "^4.63.0"
  }
}
