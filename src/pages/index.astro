---
import ScriptAnalyzer from '../components/ScriptAnalyzer';
import '../styles/global.css';
import '../styles/docs.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UPLC — Cardano Smart Contract Analyzer</title>
    <meta name="description" content="Analyze and decode Cardano Plutus smart contracts. Extract builtins, error messages, and visualize contract architecture from any script hash." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div class="container">
      <header>
        <a href="/" class="header-link" onclick="window.history.pushState({}, '', '/'); window.location.reload(); return false;">
          <h1>UPLC <span class="accent">Analyzer</span></h1>
        </a>
        <p>Decode and visualize Cardano smart contracts</p>
      </header>

      <main>
        <ScriptAnalyzer client:load />
      </main>

      <footer>
        <p>
          Data from <a href="https://api.koios.rest" target="_blank">Koios API</a> · 
          <a href="https://github.com/will-break-it/uplc" target="_blank">GitHub</a>
        </p>
      </footer>
    </div>
  </body>
</html>
