---
import ScriptAnalyzer from '../components/ScriptAnalyzer';
import '../styles/global.css';
import '../styles/docs.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UPLC Analyzer — Cardano Smart Contract Decoder</title>
    <meta name="description" content="Decode and analyze Cardano Plutus smart contracts. View UPLC bytecode, AI-powered Aiken decompilation, builtin usage, and trace strings." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Open Graph -->
    <meta property="og:title" content="UPLC Analyzer — Cardano Smart Contract Decoder" />
    <meta property="og:description" content="Decode and analyze Cardano Plutus smart contracts. View UPLC bytecode, AI-powered Aiken decompilation, builtin usage, and trace strings." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://uplc.pages.dev" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="UPLC Analyzer — Cardano Smart Contract Decoder" />
    <meta name="twitter:description" content="Decode and analyze Cardano Plutus smart contracts with AI-powered decompilation." />
  </head>
  <body>
    <div class="container">
      <header>
        <a href="/" class="header-link" onclick="window.history.pushState({}, '', '/'); window.location.reload(); return false;">
          <h1>UPLC <span class="accent">Analyzer</span></h1>
        </a>
        <p>Decode and visualize Cardano smart contracts</p>
      </header>

      <main>
        <ScriptAnalyzer client:load />
      </main>

      <footer>
        <p>
          Data from <a href="https://api.koios.rest" target="_blank">Koios API</a> · 
          <a href="https://github.com/will-break-it/uplc" target="_blank">GitHub</a>
        </p>
      </footer>
    </div>
  </body>
</html>
